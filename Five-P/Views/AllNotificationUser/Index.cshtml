@using Five_P.Models;
@model List<Notification>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="py-5 mt-5"></div>
<div class="w-100 text-center mt--5">
    <h3>Thông báo</h3>
</div>
<table class="table">
    <tr>
        <th>
            Thông báo
        </th>
        <th>
            Trạng thái
        </th>
        <th>Tùy chọn</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.notification_content
            </td>
            <td>
                @item.notification_status
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.notification_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.notification_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.notification_id })
            </td>
        </tr>
    }

</table>
