@using Five_P.Models;
@model User
@{
    ViewBag.Title = "RegisterPersonalInformation";
    Layout = "~/Views/Shared/LayoutRegisterPersonalInformation.cshtml";
}
<div class="image-container set-full-height" style='background-image: url("/Content/Layout_RegisterPersonalInformation/img/wizard.jpg");'>
    <!--   Creative Tim Branding   -->
    <a href="@Url.Action("Index","Home")">
        <div class="logo-container">
            <a class="navbar-brand" style="color:white"><span class="far fa-gem"></span>Five-P</a>
        </div>
    </a>

    <!--  Made With Get Shit Done Kit  -->
    <a href="@Url.Action("UserPage","Account")" class="made-with-mk">
        <div class="brand"><i class="fas fa-user" style="font-size:25px;"></i></div>
        <div class="made-with">Trang <strong>Cá Nhân</strong></div>
    </a>

    <!--   Big container   -->
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">

                <!--      Wizard container        -->
                <div class="wizard-container">

                    <div class="card wizard-card" data-color="orange" id="wizardProfile">
                        <form action="@Url.Action("RegisterPersonalInformation","Account")" method="post" enctype = "multipart/form-data">
                            <!--        You can switch ' data-color="orange" '  with one of the next bright colors: "blue", "green", "orange", "red"          -->
                            @Html.AntiForgeryToken()
                            <div class="wizard-header">
                                <h3>
                                    <b>THÔNG TIN</b> HIỂN THỊ CỦA BẠN <br>
                                    <small>Chúng tôi sẽ hiển thị thông tin phù hợp với thông tin của bạn.</small>
                                </h3>
                            </div>

                            <div class="wizard-navigation">
                                <ul>
                                    <li><a href="#about" data-toggle="tab">Avata</a></li>
                                    <li><a href="#account" data-toggle="tab">giới tính</a></li>
                                    <li><a href="#address" data-toggle="tab">địa chỉ</a></li>
                                </ul>

                            </div>

                            <div class="tab-content">
                                <div class="tab-pane" id="about">
                                    <div class="row">
                                        <h4 class="info-text">Điền thông tin để chúng tôi hiển thị nội dung phù hợp</h4>
                                        <div class="col-sm-4 col-sm-offset-1">
                                            <div class="picture-container">
                                                <div class="picture">
                                                    <img src="~/Content/Layout_RegisterPersonalInformation/img/default-avatar.png" class="picture-src" id="wizardPicturePreview" title="" />
                                                    <input type="file" name="fileImg" id="wizard-picture"/>
                                                    @ViewBag.tbImg
                                                </div>
                                                <h6>Chọn Avata</h6>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label>Tên hiển thị <small>(bắt buộc)</small></label>
                                                <input name="user_nicename" type="text" class="form-control" placeholder="Tên ..."/>
                                            </div>
                                            <div class="form-group">
                                                <label>Ngày sinh <small>(bắt buộc)</small></label>
                                                <input name="user_date_born" type="date" class="form-control" placeholder="20/8/2020"/>
                                            </div>
                                        </div>
                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div class="form-group">
                                                <label>Email <small>(bắt buộc)</small></label>
                                                <input name="user_email" type="email" value="@Model.user_email" class="form-control" placeholder="abc@gmail.com"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="account">
                                    <h4 class="info-text"> Giới tính </h4>
                                    <div class="row">

                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div class="col-sm-4">
                                                <div class="" data-toggle="">
                                                    <input type="radio" name="user_sex" value=0>
                                                    <div class="icon">
                                                        <i class="fas fa-male" style="font-size:100px;"></i>
                                                    </div>
                                                    <h6>Nam</h6>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="" data-toggle="">
                                                    <input type="radio" name="user_sex" value=1>
                                                    <div class="icon">
                                                        <i class="fas fa-female" style="font-size:100px"></i>
                                                    </div>
                                                    <h6>Nữ</h6>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="" data-toggle="">
                                                    <input type="radio" name="user_sex" value=2>
                                                    <div class="icon">
                                                        <i class="fas fa-mars" style="font-size:100px;"></i>
                                                    </div>
                                                    <h6>LGBT</h6>
                                                </div>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="tab-pane" id="address">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <h4 class="info-text"> Địa chỉ của bạn! </h4>
                                        </div>
                                        <div class="col-sm-6 col-sm-offset-1">
                                            <div class="form-group">
                                                <label>Địa chỉ</label>
                                                <input type="text" name="user_address" class="form-control" placeholder="Tên huyện, tên tỉnh, thành phố, ..."/>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <label>Số điện thoại</label>
                                                <input type="text" name="user_phone" class="form-control" placeholder="+84 ..."/>
                                            </div>
                                        </div>
                                        <div class="col-sm-5 col-sm-offset-1">
                                            <div class="form-group">
                                                <label>Link Facebook</label>
                                                <input type="text" name="user_link_facebok" class="form-control" placeholder="......"/>
                                            </div>
                                        </div>
                                        <div class="col-sm-5">
                                            <div class="form-group">
                                                <label>Link Github</label>
                                                <input type="text" name="user_link_github" class="form-control" placeholder="........"/>
                                            </div>
                                        </div>
                                        <div class="col-sm-5 col-sm-offset-1">
                                            <div class="form-group">
                                                <label>Sở thích công việc</label>
                                                <input type="text" name="user_hobby_work" class="form-control" placeholder="......"/>
                                            </div>
                                        </div>
                                        <div class="col-sm-5">
                                            <div class="form-group">
                                                <label>Sở thích cá nhân</label>
                                                <input type="text" name="user_hobby" class="form-control" placeholder="........"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="wizard-footer height-wizard">
                                <div class="pull-right">
                                    <input type='button' class='btn btn-next btn-fill btn-warning btn-wd btn-sm' name='next' value='Tiếp theo' />
                                    <input type="submit" class='btn btn-finish btn-fill btn-warning btn-wd btn-sm' name='finish' value='Hoàn thành' />

                                </div>

                                <div class="pull-left">
                                    <input type='button' class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous' value='Quay lại' />
                                </div>
                                <div class="clearfix"></div>
                            </div>

                        </form>
                    </div>
                </div> <!-- wizard container -->
            </div>
        </div><!-- end row -->
    </div> <!--  big container -->

    <div class="footer">
        <div class="container">
            Made with <i class="fa fa-heart heart"></i> by <a href="http://www.creative-tim.com">Creative Tim</a>. Free download <a href="http://www.creative-tim.com/product/bootstrap-wizard">here.</a>
        </div>
    </div>

</div>

