@using Five_P.Models;
@model List<Rate_Post>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int intCount = 1;
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Đánh giá bài viết ( @ViewBag.SumRatePost )</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                            <th>
                                Stt
                            </th>
                            <th>
                                <i class="far fa-newspaper"></i> Bài viết
                            </th>
                            <th class="text-center">
                                <i class="now-ui-icons users_single-02"></i> người đánh giá
                            </th>
                            <th class="text-center">
                                <i class="far fa-thumbs-up"></i> Đánh giá
                            </th>
                            <th class="text-center">
                                <i class="fas fa-magic"></i> Tùy chọn
                            </th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @intCount
                                        </td>
                                        <td>
                                            @item.Post.post_title
                                        </td>
                                        <td class="text-center">
                                            @item.User.user_nicename
                                        </td>
                                        <td class="text-center">
                                            @if (item.rate_post1 == true)
                                            {
                                                <i class="far fa-thumbs-up"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-thumbs-down"></i>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <i class="fas fa-user-edit"></i> |
                                            <a href="/Home/DetailQuestion?idpost=@item.post_id"><i class="far fa-eye"></i></a> |
                                            <i class="far fa-trash-alt"></i>
                                        </td>
                                    </tr>
                                    intCount++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

