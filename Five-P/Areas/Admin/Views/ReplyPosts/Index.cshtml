@using Five_P.Models;
@model List<Reply_Post>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int intCount = 1;
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> Trả lời bài viết ( @ViewBag.SumReplyPost )</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                            <th>
                                Stt
                            </th>
                            <th>
                                <i class="far fa-newspaper"></i> Bài viết
                            </th>
                            <th>
                                <i class="fas fa-reply-all"></i> Trả lời
                            </th>
                            <th>
                                <i class="fab fa-jedi-order"></i> Nổi tiếng
                            </th>
                            <th class="text-right">
                                <i class="fas fa-magic"></i> Tùy chọn
                            </th>
                            </thead>
                            <tbody>
                                @foreach ( var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @intCount
                                        </td>
                                        <td>
                                            @item.Post.post_title
                                        </td>
                                        <td>
                                            @item.reply_post_title
                                        </td>
                                        <td>
                                            @item.reply_post_popular
                                        </td>
                                        <td class="text-right">
                                            <i class="fas fa-user-edit"></i> |
                                            <a href="/Home/DetailQuestion?idpost=@item.post_id"><i class="far fa-eye"></i></a> |
                                            <i class="far fa-trash-alt"></i>
                                        </td>
                                    </tr>
                                    intCount++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

