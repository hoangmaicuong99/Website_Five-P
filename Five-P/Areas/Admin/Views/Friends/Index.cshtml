@using Five_P.Models;
@model List<Friend>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int intCount = 1;
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> Bạn người dùng</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                            <th>
                                Stt
                            </th>
                            <th>
                                Tên
                            </th>
                            <th>
                                Bạn
                            </th>
                            <th class="text-right">
                                Tùy chọn
                            </th>
                            </thead>
                            <tbody>
                                @foreach ( var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @intCount
                                        </td>
                                        <td>
                                            @item.User.user_nicename
                                        </td>
                                        <td>
                                            @item.User1.user_nicename
                                        </td>
                                        <td class="text-right">
                                            <i class="fas fa-user-edit"></i> |
                                            <i class="far fa-eye"></i> |
                                            <i class="far fa-trash-alt"></i>
                                        </td>
                                    </tr>
                                    intCount++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

