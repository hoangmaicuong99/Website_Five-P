@using Five_P.Models;
@model List<Comment>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int intCount = 1;
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Comment trả lời bài viết</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                            <th>
                                Stt
                            </th>
                            <th>
                                <i class="fas fa-reply-all"></i> Trả lời
                            </th>
                            <th>
                                <i class="far fa-comment-dots"></i> Comment
                            </th>
                            <th class="text-center">
                                <i class="fas fa-magic"></i> Tùy chọn
                            </th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @intCount
                                        </td>
                                        <td>
                                            @item.Reply_Post.reply_post_title
                                        </td>
                                        <td>
                                            @item.comment_content
                                        </td>
                                        <td class="text-center">
                                            <i class="fas fa-user-edit"></i> |
                                            <i class="far fa-eye"></i> |
                                            <i class="far fa-trash-alt"></i>
                                        </td>
                                    </tr>
                                    intCount++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

